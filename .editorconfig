root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.{yml,yaml,json}]
tab_width = 2
indent_size = 2

[*.{kt,kts}]
# noinspection EditorConfigKeyCorrectness
ktlint_standard_multiline-expression-wrapping = disabled